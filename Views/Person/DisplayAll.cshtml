@model IEnumerable<Person>

<h3>People List</h3>

<div class="my-2">
    <a asp-controller="Person" asp-action="Add" class="btn btn-info my-2">Add More</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Email</td>
                    <td>@person.Address</td>
                    <td>
                        <a asp-controller="Person" asp-action="Edit" asp-route-id="@person.Id" class="btn btn-success">Edit</a>
                        <a asp-controller="Person" asp-action="Delete" asp-route-id="@person.Id"
                           onclick="return confirm('Are you sure you want to delete this record?')"
                           class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
